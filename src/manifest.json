{
    "manifest_version": 3,
    "name": "My First Add-on",
    "version": "0.1",
    "description": "Adds two buttons to view/download per track Soundcloud artwork.",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "activeTab",
        "webNavigation"
    ],
    "host_permissions": [
        "*://*.soundcloud.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.soundcloud.com/*"
            ],
            "js": [
                "src/artwork.js"
            ]
        }
    ]
}